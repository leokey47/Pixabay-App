<Window x:Class="WpfApp17.View.ChangePasswordDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password" Height="200" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter Old Password:"/>
            <PasswordBox x:Name="OldPasswordBox" Margin="0,0,0,10"/>
            <TextBlock Text="Enter New Password (8 characters minimum):"/>
            <PasswordBox x:Name="NewPasswordBox" Margin="0,0,0,10"/>
            <Button Content="Change Password" Click="ChangePasswordButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
